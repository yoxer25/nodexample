<div class="container-fluid py-5 px-sm-3 px-lg-5">
    <div class="row pt-5" style="justify-content: center;">
        <div class="col-lg-5 pb-5">
            <div class="card border-0">
                <div class="card-header bg-primary text-center p-4">
                    <h1 class="text-white m-0">Cambiar Contraseña</h1>
                </div>
                <div class="card-body rounded-bottom bg-white p-5">
                    <form action="/configuracion" method="POST">
                        <div class="form-group">
                            <input type="password" class="form-control p-4" placeholder="Nueva Contraseña"
                                name="newPassword" id="newPassword" required="required" />
                        </div>
                        <div>
                            <button class="btn btn-primary btn-block py-3" type="submit">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>