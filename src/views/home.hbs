                                    <img src="/icon/wrench-solid.svg" width="10%">
                                </span>
                            </a>
                        </div>
                        <div class="float-right text-right">
                            <p class="text-dark p-3 top-0 end-0">
                                <strong>Categor√≠a</strong>
                            </p>
                            {{#each totalCategories}}
