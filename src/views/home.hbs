                                <strong>Ventas</strong>
                            </p>
                            {{#each totalSales}}
                            <h5 class="text-dark p-3 position-absolute end-0">{{sales}}</h5>
                            {{/each}}
                        </div>
                    </div>
                    <p class="text-muted pt-3 mb-0 mt-2 border-top">
                        <img src="/icon/note-sticky-solid.svg" width="3%">
