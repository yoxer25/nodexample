                            {{/each}}
                        </div>
                    </div>
                    <p class="text-muted pt-3 mb-0 mt-2 border-top">
                        <img src="/icon/note-sticky-solid.svg" width="3%">
                        Registros
                    </p>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 mb-2">
            <div class="card card-statistics h-100 card-dashboard border-2 border-primary">
