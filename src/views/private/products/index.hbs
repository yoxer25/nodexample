{{> navigation/navigation }}

<div class="container-fluid py-5 px-sm-3 px-lg-5">
    <div class="row pt-5 pb-5">
        <div class="col-md-5">
            <a href="/private/producto/create">{{>btn-new}}</a>
            <h6 class="text-uppercase pt-3" style="letter-spacing: 5px;">listado de productos</h6>
        </div>
        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <form action="/private/producto/importbd" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <input type="file" accept=".xlsx" name="excel" id="excel"
                                    class="input-contact form-control">
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-upload"
                                        aria-hidden="true"></i> Importar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table id="datatablesSimple" width="100%">
                        <thead>
                            <tr scope="col" colspan="7">
                                <th>Producto</th>
                                <th>Categor√≠a</th>
                                <th>Marca</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th colspan="2">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr scope="col">
                                <td>{{nombreProducto}}</td>
                                <td>{{categoria}}</td>
                                <td>{{marca}}</td>
                                <td>S/. {{precio}}</td>
                                <td>{{stock}}</td>
                                <td>
                                    <a class="btn btn-warning" href="/private/producto/update/{{idProducto}}"><i
                                            class="fas fa-edit"></i></a>
                                </td>
                                <td>
                                    <form action="/private/producto/delete/{{idProducto}}?_method=DELETE" method="post">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger"><i
                                                class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                            {{else}}
                            <tr scope="col">
                                <td colspan="7">
                                    <p class="card-text text-center">No hay registros que mostrar</p>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer/footer }}