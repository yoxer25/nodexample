<div class="container-fluid py-5 px-sm-3 px-lg-5">
    <div class="row pt-5 pb-5" style="justify-content: center;">
        <div class="col-lg-5 text-center">
            <div class="card border-0">
                <div class="card-header bg-primary text-center p-4">
                    <h1 class="text-white m-0">Iniciar Sesión</h1>
                </div>
                <div class="card-body rounded-bottom bg-white p-5">
                    <form action="/myaccount/LogIn" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control p-4" placeholder="Usuario" name="dni" id="dni"
                                required="required" />
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control p-4" placeholder="Contraseña" name="userpassword"
                                id="userpassword" required="required" />
                        </div>
                        <div>
                            <button class="btn btn-primary btn-block py-3" type="submit">Acceder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>