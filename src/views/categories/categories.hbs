{{> navigation/navigation }}

<div class="container-fluid py-5 px-sm-3 px-lg-5">
    <div class="text-center pt-5 pb-5">
        <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">PRODUCTOS</h6>
    </div>
    <div class="row" style="text-align: justify;">
        {{#each productos}}
        <div class="col-lg-3 col-md-6 col-sm-6 pb-1">
            <div class="team-item bg-white mb-4" style="min-height: 600px;">
                <a href="/producto/{{idProducto}}" class="nav-link">
                    <div class="team-img position-relative overflow-hidden" style="min-height: 250px;">
                        <img class="position-absolute w-100 h-100" src="{{imagen}}" alt="">
                    </div>
                    <div class="text-justify py-4">
                        <p class="mb-3 text-uppercase"
                            style="color: gray; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">
                            {{marca}}</p>
                        <h5 class="mb-3 font-weight-bold">{{nombreProducto}}</h5>
                        <h4 class="m-0 text-primary font-weight-bold">S/. {{precio}}</h4>
                    </div>
                </a>
            </div>
        </div>
        {{else}}
        <p class="card-text text-center">No hay productos que mostrar</p>
        {{/each}}
    </div>
    <a href="https://wa.me/51935837974" class="floating_button" role="button" id="sendbtn" target="_blank">
        <i class="fab fa-whatsapp fa-3x" aria-hidden="true"></i>
    </a>
</div>

{{> footer/footer }}