<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Nombre Producto" name="nameProduct" id="nameProduct"
                value="{{product.nombreProducto}}" required="required" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Marca" name="brand" id="brand"
                value="{{product.marca}}" required="required" />
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="Precio Unitario" name="priceUnit"
                        id="priceUnit" value="{{product.precio_unitario}}" onkeypress="return solonumeros(event)"
                        required="required" />
                </div>
                <div class="col-md-6">
                    <input type="number" class="form-control" placeholder="Stock" name="stock" id="stock"
                        value="{{product.stock}}" required="required" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Precio Por Mayor" name="priceWholesale"
                id="priceWholesale" value="{{product.precio_mayor}}" onkeypress="return solonumeros(event)"
                required="required" />
        </div>
        <div class="form-group">
            <select class="form-select form-control" aria-label="Default select example" name="categorie" id="product"
                style="width: 100%;" required="required">
                <option value="{{product.idCategoria}}" selected>{{product.categoria}}</option>
                {{#each categorie}}
                <option value="{{idCategoria}}">{{nombreCategoria}}</option>
                {{/each}}
            </select>
        </div>
    </div>
</div>